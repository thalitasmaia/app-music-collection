{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">Sorry, we couldn't find an account with this username. Please check you're using the right username and try again.</div>
		{% endif %}

		<div class="container vertical-center justify-content-center">
			<div class="shadow bg-white rounded w-50 p-3 ">
				<div>
					<h3 class="primary-font">
						<svg width="1em" height="1em" viewbox="0 0 16 16" class="bi bi-music-note-beamed" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path d="M6 13c0 1.105-1.12 2-2.5 2S1 14.105 1 13c0-1.104 1.12-2 2.5-2s2.5.896 2.5 2zm9-2c0 1.105-1.12 2-2.5 2s-2.5-.895-2.5-2 1.12-2 2.5-2 2.5.895 2.5 2z"/>
							<path fill-rule="evenodd" d="M14 11V2h1v9h-1zM6 3v10H5V3h1z"/>
							<path d="M5 2.905a1 1 0 0 1 .9-.995l8-.8a1 1 0 0 1 1.1.995V3L5 4V2.905z"/>
						</svg>
						Music Collection
					</h3>
					<hr>
					<h6 class="second-title">Login</h6>
				</div>

				<div class="align-middle">
					<label for="inputUsername" class="standard-font">Username</label>
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control form-control-sm form-inputs" required autofocus>

					<label for="inputPassword" class="standard-font">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control form-control-sm form-inputs" required>
				</div>

				<br>

				<div>
					<button type="button" class="btn btn-link btn-sm">
						<a href="{{ path('app_register') }}">Don't you have an acount? Register.</a>
					</button>


					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button class="btn btn-primary float-right" type="submit">
						Sign in
					</button>
				</div>

			</div>
		</div>

	</form>
{% endblock %}
